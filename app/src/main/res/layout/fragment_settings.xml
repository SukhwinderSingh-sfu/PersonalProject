<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.settingsFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageChanger"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:contentDescription="@string/nav_header_desc"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelinehor30"
        app:layout_constraintStart_toEndOf="@+id/guidelinever25" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="User Name"
        app:layout_constraintEnd_toStartOf="@+id/guidelinever35"
        app:layout_constraintTop_toBottomOf="@+id/guidelinehor40" />

    <EditText
        android:id="@+id/settings_username"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginStart="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/guidelinever35"
        app:layout_constraintTop_toBottomOf="@+id/guidelinehor40" />

    <Button
        android:id="@+id/settings_savechanges"
        android:layout_width="188dp"
        android:layout_height="41dp"
        android:layout_marginStart="13dp"
        android:backgroundTint="@color/colorwhite"
        android:text="Done"
        app:layout_constraintStart_toEndOf="@+id/guidelinever25"
        app:layout_constraintTop_toBottomOf="@+id/guidelinehor85" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:text="Change Profile Photo"
        android:textColor="#4d94ff"
        app:layout_constraintStart_toEndOf="@+id/guidelinever25"
        app:layout_constraintTop_toBottomOf="@+id/guidelinehor30" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinever25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinehor30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinehor40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinever35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinehor85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />


</androidx.constraintlayout.widget.ConstraintLayout>